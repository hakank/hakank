% using int_len instead: 1min 47s
euler25d =>
    F1 = 1,
    F2 = 1,
    Len = 1,
    Ix = 2,
    while (Len < 1000) 
       Tmp = F1,
       F1 := F2,
       F2 := Tmp + F1,
       Len := int_len(F2),
       % Len := nlen(F2), % give float overflow for Ix=1476 (len ~ 309)
       if Ix mod 100 == 0 then
          writeln([i=Ix,len=Len])
       end,
       Ix := Ix + 1
    end,
    writeln([Ix,F2,Len]),
    nl.



