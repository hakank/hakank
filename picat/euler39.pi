%
% 2.0s
%
euler39d => 
  Max = 0,
  N = 0,
  foreach(I in 2..1000) 
     Num = p39d(I) -> 
       if Num > Max then
          Max := Num,
          N := I
       end
     ;  
     true
  end,
  writeln([n=N, max=Max]),
  nl.

